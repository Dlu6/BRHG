# License Management
LICENSE_API_URL=http://localhost:8004/api/licenses
LICENSE_SESSION_API_URL=http://localhost:8004/api/licenses/sessions

# User Management
USER_API_URL=http://localhost:8004/api/users

# Call History
CDR_API_URL=http://localhost:8004/api/cdr

# System Health
SYSTEM_HEALTH_API_URL=http://localhost:8004/api/users/system/health

