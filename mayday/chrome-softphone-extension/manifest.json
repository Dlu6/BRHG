{
  "manifest_version": 3,
  "name": "Mayday Bar",
  "version": "1.0.6",
  "description": "Professional WebRTC softphone for call center agents with advanced calling features.",
  "permissions": ["storage", "activeTab", "tabs", "notifications"],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://mayday-website-backend-c2abb923fa80.herokuapp.com/*",
    "*://*.morvenconsults.com/*",
    "http://localhost:3002/*",
    "https://cs.hugamara.com/*",
    "https://cs.brhgroup.co/*",
    "*://*.hugamara.com/*",
    "*://*.zoho.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3000/*",
        "*://*.zoho.com/*",
        "*://*.cs.morvenconsults.com/*",
        "http://localhost:3002/*",
        "https://cs.hugamara.com/*",
        "https://cs.brhgroup.co/*",
        "*://*.hugamara.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": "logo.png",
    "default_title": "Mayday Bar"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["logo128.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "author": "Mayday Call Center Software",
  "homepage_url": "https://maydaycrm.com",
  "short_name": "Mayday Bar",
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "http://localhost:3002/*",
      "https://cs.hugamara.com/*",
      "https://cs.brhgroup.co/*",
      "*://*.hugamara.com/*"
    ]
  }
}
